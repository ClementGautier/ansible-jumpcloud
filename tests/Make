.PHONY: debian ubuntu centos clean

containers = centos6 centos7 debian-stable ubuntu1204 ubuntu1404 ubuntu1604 ubuntu1804

all: all_arch

clean_command = docker rm -f $(containers) || true

all_arch:
	$(clean_command)
	ansible-playbook -i inventory playbook.yml

debian:
	$(clean_command)
	ansible-playbook -i inventory-debian playbook.yml

ubuntu:
	$(clean_command)
	ansible-playbook -i inventory-ubuntu playbook.yml

centos:
	$(clean_command)
	ansible-playbook -i inventory-centos playbook.yml

clean:
	$(clean_command)
